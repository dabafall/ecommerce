{% extends 'admin/base.html.twig' %}

{% block title %}Ajouter Catégorie!{% endblock %}

{% block body %}
    <!-- Breadcrumb Start -->
    <div class="container-fluid">
        <div class="row px-xl-5">
            <div class="col-12">
                <nav class="breadcrumb bg-light mb-30">
                    <a class="breadcrumb-item text-dark" href="#">Acceuil</a>
                    <span class="breadcrumb-item active">Ajouter Catégorie</span>
                </nav>
            </div>
        </div>
    </div>
    <!-- Breadcrumb End -->


    <!-- Contact Start -->
    <div class="container-fluid">
        <h2 class="section-title position-relative text-uppercase mx-xl-5 mb-4"><span class="bg-secondary pr-3">CATEGORIE</span></h2>
        <div class="row px-xl-5">
            <div class="col-lg-7 mb-5">
                <div class="contact-form bg-light p-30">
                    <div id="success"></div>
                    <form name="addcat" id="catForm" novalidate="novalidate">
                        <div class="control-group">
                            <input type="text" class="form-control" id="libelle" placeholder="Libellé"
                                required="required" data-validation-required-message="Entrer votre Libellé svp!" />
                            <p class="help-block text-danger"></p>
                        </div>

                        <div class="control-group">
                            <input type="text" class="form-control" id="produit" placeholder="Produit"
                                required="required" data-validation-required-message="Choisir produits!" />
                            <p class="help-block text-danger"></p>
                        </div>
                        
                        <div>
                            <button class="btn btn-primary py-2 px-4" type="submit" id="enrigistrer">ENRIGISTRER</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <!-- Contact End -->
{% endblock %}
